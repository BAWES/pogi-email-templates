<mjml>
    <mj-head>
        <mj-title>Ovenly has added you as a team member on their Plugn store</mj-title>
        <mj-font name="Roboto" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500"></mj-font>
        <mj-attributes>
        <mj-all font-family="Proxima Nova, Arial, Arial, Helvetica, sans-serif"></mj-all>
        <mj-text font-size="14px" color="#000000" line-height="24px"></mj-text>
        <mj-section padding="0px"></mj-section>
        </mj-attributes>
    </mj-head>
    <mj-body width="600px" background-color="#fff">

    <mj-section padding-top="5px" padding-bottom="5px">
    </mj-section>

        <mj-wrapper border="1px solid #d8e2e7" padding-top="0" >

            <mj-hero
              mode="fixed-height"
              height="142px"
              background-width="631px"
              background-height="142px"
              background-url="../img/plugn-bg.png"
              background-color="#2B546A"
              >
              <mj-image
              align="left"
              padding="0"
              padding-left="30px"
              padding-top="30px"
              src="../img/plugn-white.png" width="93px"/>
              <mj-text
                padding="20px"
                padding-left="30px"
                padding-top="40px"
                color="#ffffff"
                font-family="Helvetica"
                align="left"
                font-size="21px"
                font-weight="900">
                Welcome to the team
              </mj-text>
            </mj-hero>

            <mj-section padding="20px" padding-top="25px">
                <mj-column>

                <mj-text
                    align="left"
                    padding-bottom="10px">
                    Hi Khalid,
                </mj-text>

                <mj-text
                    align="left"
                    padding-top="0px"
                    padding-bottom="10px">
                    You have been added as a team member for the store <a href='#storeUrl' style='color:#2F80ED; text-decoration:none;'>Ovenly</a>.
                </mj-text>

                <mj-text
                    align="left"
                    padding-top="0px"
                    padding-bottom="10px">
                    You can now log in to manage the store.
                </mj-text>


                      <mj-button background-color="#2B546A"
                             color="#fff"
                             font-size="14px"
                             font-weight="bold"
                             border-radius="5px"
                             align="left"
                             padding-top="10px"
                             font-weight="400"
                             href="#">
                             Manage Store
                         </mj-button>


                </mj-column>
            </mj-section>


        </mj-wrapper>

    </mj-body>
</mjml>
