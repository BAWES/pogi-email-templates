<mjml>
    <mj-head>
        <mj-title>Microsoft Technologies has invited you to collaborate in their recruitment process on Pogi</mj-title>
        <mj-font name="Roboto" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500"></mj-font>
        <mj-attributes>
          <mj-all font-family="Proxima Nova, Arial, Arial, Helvetica, sans-serif"></mj-all>
          <mj-text font-size="16px" color="#000000" line-height="24px"></mj-text>
          <mj-section padding="0px"></mj-section>
        </mj-attributes>
    </mj-head>
    <mj-body width="700px" background-color="#fff">

        <mj-section padding-top="10px" padding-bottom="10px">
            <mj-column>
                <mj-image src="../img/logo.png" width="100px"/>
            </mj-column>
        </mj-section>

        <mj-wrapper border="1px solid #d8e2e7" padding="5px" >

            <mj-section>
                <mj-column>

                    <mj-text font-size="24px"
                        padding-top="30px"
                        padding-bottom="15px"
                        font-weight="bold">
                        Microsoft Technologies has invited you to collaborate in their recruitment process on Pogi
                    </mj-text>

                    <mj-divider border-width="1px" border-color="#d8e2e7" />

                    <mj-text
                        padding-top="0"
                        padding-bottom="20px">
                        You can <a href='#invitationPage'>accept or decline</a> this invitation. You can also visit
                        <a href='#employerPublicProfile'>Microsoft Technologies</a> to learn a bit more about them.
                    </mj-text>




                    <mj-button background-color="#f24459"
                        color="white"
                        font-size="18px"
                        font-weight="bold"
                        border="none"
                        border-radius="5px"
                        align="center"
                        padding-top="8px"
                        padding-left="30px"
                        padding-right="30px"
                        padding-bottom="0"
                        font-weight="400"
                        href="#invitationPage">
                        View Invitation
                    </mj-button>



                    <mj-text
                        padding-top="20px"
                        padding-bottom="20px">
                        <b>Note:</b> This invitation was intended for <b>saoud@gmail.com</b>.
                        If you were not expecting this invitation, you can ignore this email. If Microsoft Technologies is sending you too many emails, please reply to this email to report abuse.
                    </mj-text>

                    <mj-divider border-width="1px" border-color="#d8e2e7" />

                    <mj-text
                        color="#666"
                        padding-top="20px"
                        padding-bottom="20px">
                        <b>Getting a 404 error?</b> Make sure you're signed in as <b>saoud@gmail.com</b>
                    </mj-text>

                    <mj-text
                        color="#666"
                        padding-top="0"
                        padding-bottom="0">
                        <b>Button not working?</b> Copy and paste this link into your browser:
                    </mj-text>
                    <mj-text
                        color="#666"
                        padding-top="0"
                        padding-bottom="20px">
                        https://pogi.io/invitation-link/123/a/332
                    </mj-text>


                </mj-column>
            </mj-section>


        </mj-wrapper>

        <mj-section padding-top="0" padding-bottom="24px">
        </mj-section>
    </mj-body>
</mjml>
